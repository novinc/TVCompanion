<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/episode_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/desc_poster" />

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/episode_title"
                android:text="Pilot"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@+id/heart_button"
                android:layout_toStartOf="@+id/heart_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/heart_button"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_heart"
                android:drawableStart="@drawable/ic_heart"
                android:background="?android:attr/selectableItemBackground"
                android:text="90%"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <TextView
            android:id="@+id/episode_desc"
            android:text="Reese and Finch must figure out whether a young prosecutor is a victim or a suspect."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</android.support.v7.widget.CardView>