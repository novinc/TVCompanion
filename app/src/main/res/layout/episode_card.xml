<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/episode_poster"
            android:src="@drawable/show_background"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc_poster" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/episode_title"
                    android:text="Pilot"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

            <TextView
                android:id="@+id/episode_desc"
                android:text="Reese and Finch must figure out whether a young prosecutor is a victim or a suspect."
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:maxLines="4"
                android:minLines="4"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/watched_button"
                    android:drawableLeft="@drawable/ic_check_black"
                    android:drawableStart="@drawable/ic_check_black"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/ep_watched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/heart_button"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_heart"
                        android:drawableStart="@drawable/ic_heart"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="90%"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>