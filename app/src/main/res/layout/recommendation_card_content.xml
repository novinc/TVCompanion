<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_recommendations"
    tools:context=".MainActivity"
    android:id="@+id/constraintLayout">

    <TextView
        android:text="Show Title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        tools:ignore="HardcodedText"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/poster"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="Genres: some genres"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/genres"
        tools:ignore="HardcodedText"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/poster"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="Description is very long Description is very long Description is very long Description is very long Description is very long"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        tools:ignore="HardcodedText"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/genres"
        app:layout_constraintRight_toLeftOf="@+id/poster"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="2 Seasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seasons"
        tools:ignore="HardcodedText"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/poster" />

    <ImageView
        android:src="@android:color/holo_green_dark"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/poster"
        android:contentDescription="picture"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>